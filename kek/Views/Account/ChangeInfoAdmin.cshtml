@model ChangeInfoAdminViewModel

@{
    ViewData["Title"] = "Редактирование профиля";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Редактирование профиля</h2>
        </div>
        <div class="card-body">
            <form asp-action="ChangeInfoAdmin" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Почта</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StudyGroup" class="control-label">Группа</label>
                    <input asp-for="StudyGroup" class="form-control" />
                    <span asp-validation-for="StudyGroup" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Телефон</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SelectedRoleId" class="control-label">Роль</label>
                    <select asp-for="SelectedRoleId" class="form-control">
                        <option value="">-- Выберите роль --</option>
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <option value="@role.RoleId">@role.RoleName</option>
                        }
                    </select>
                    <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    <a asp-action="Users" asp-controller="Home" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>