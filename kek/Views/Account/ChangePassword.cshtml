@model ChangePasswordViewModel
<div class="mainTAJIK">
    <div class="main-log">
        <form asp-action="ChangePassword">
            <h1>Смена пароля</h1>
            <div class="input-box">
                <input asp-for="Email" placeholder="Введите почту"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class ="input-box">
                <input asp-for="NewPassword" placeholder="Введите новый пароль" />
                <span asp-validation-for="NewPassword"></span>
            </div>
            <div class ="input-box" >
                <input asp-for="ConfirmPassword" placeholder="Подтвердите пароль" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit">Сменить пароль</button>
            <a asp-controller="Account" asp-action="Login">Войти</a>
        </form>
    </div>
</div>